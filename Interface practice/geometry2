package InterfaceTest;

import java.util.Scanner;

public class Geometry {

    public static int firstShape, secondShape;
    public static void main(String[] args) {

        Scanner read = new Scanner(System.in);
        System.out.println("Choose the first shape to compare \n" +
                "1. Circle\n" +
                "2. Triangle\n" +
                "3. Rectangle\n");
        int firstShape = read.nextInt();


        System.out.println("Choose the second shape to compare \n" +
                "1. Circle\n" +
                "2. Triangle\n" +
                "3. Rectangle\n");
        int secondShape = read.nextInt();
        mainCopy();


    }


    public static void mainCopy() {

        Scanner read = new Scanner(System.in);
        Circle circle1 = new Circle();
        Triangle triangle1 = new Triangle();
        Rectangle rectangle = new Rectangle();


        if (firstShape == 1 && secondShape == 2) {
            if (areaIsGreater(circle1, triangle1)) {
                System.out.println("\nThe area of the circle is greather than the area of the triangle\n");


            } else System.out.println("\nThe area of the circle is less than the area of the triangle \n");
        } else if (firstShape == 1 && secondShape == 3) {
            if (areaIsGreater(circle1, triangle1)) {
                System.out.println("\nThe area of the circle is greather than the area of the rectangle\n");


            } else System.out.println("\nThe area of the circle is less than the area of the rectangle \n");
        } else if (firstShape == 2 && secondShape == 3) {
            if (areaIsGreater(circle1, triangle1)) {
                System.out.println("\nThe area of the triangle is greather than the area of the rectangle\n");


            } else System.out.println("\nThe area of the triangle is less than the area of the rectangle \n");
        } else {
            System.out.println("You choice is invalid! Do you want to start over [Y/N]");

        }


        System.out.println("\nDo you want to start over [Y/N] \n");
        char startOver = read.next().charAt(0);


        if (startOver == 'Y')
            mainCopy();
    }

    public static boolean areaIsGreater(Measurable shape1, Measurable shape2) {


        double firstValue = 0, secondValue = 0;
        Scanner read = new Scanner(System.in);




        switch (firstShape) {
            case 1: {
                System.out.print("\nPlease enter the radius of the circle:      ");
                double raduis = read.nextDouble();
                firstValue = shape1.calculateArea(raduis, 0);
                break;
            }
            case 2: {
                System.out.print("\nPleas enter the base of the triangle:       ");
                double baseOfTiangle = read.nextDouble();
                System.out.print("\nPlease enter the height of the triangle:    ");
                double heightOfTriangle = read.nextDouble();
                firstValue = shape1.calculateArea(baseOfTiangle, heightOfTriangle);
                break;
            }
            case 3: {
                System.out.print("\nPleas enter the base of the triangle:       ");
                double baseOfTiangle = read.nextDouble();
                System.out.print("\nPlease enter the height of the triangle:    ");
                double heightOfTriangle = read.nextDouble();
                firstValue = shape1.calculateArea(baseOfTiangle, heightOfTriangle);
                break;

            }
        }


        switch (secondShape) {

            case 1: {
                System.out.print("\nPlease enter the radius of the circle:      ");
                double raduis = read.nextDouble();
                secondValue = shape1.calculateArea(raduis, 0);
                break;
            }
            case 2: {
                System.out.print("\nPleas enter the base of the triangle:       ");
                double baseOfTiangle = read.nextDouble();
                System.out.print("\nPlease enter the height of the triangle:    ");
                double heightOfTriangle = read.nextDouble();
                secondValue = shape1.calculateArea(baseOfTiangle, heightOfTriangle);
                break;
            }
            case 3: {
                System.out.print("\nPleas enter the base of the rectangle:       ");
                double baseOfrectangle = read.nextDouble();
                System.out.print("\nPlease enter the height of the rectangle:    ");
                double heightOfrecangle = read.nextDouble();
                secondValue = shape1.calculateArea(baseOfrectangle, heightOfrecangle);
                break;
            }
        }


        return firstValue >= secondValue;
    }

}
